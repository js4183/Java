package while문;

import java.util.Scanner;

public class Ex01예제3 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int num = 0;
		int n1 = 0;//홀수
		int n2 = 0;//짝수
		
		while(num !=-1) {
			System.out.print("숫자 입력 : ");
			if(num%2==1) {
				++n1;
			}else if(num%2==0){
				++n2;
			}
			num = sc.nextInt();
		}System.out.println("홀수 개수 : "+n1);
		 System.out.println("짝수 개수 : "+n2);

	}

}
